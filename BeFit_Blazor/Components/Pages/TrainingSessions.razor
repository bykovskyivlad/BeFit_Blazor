@page "/training-sessions"
@attribute [Authorize]
@rendermode InteractiveServer

@using BeFit_Blazor.Data
@using BeFit_Blazor.Models
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Forms

@inject ApplicationDbContext Db
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthStateProvider

<h3>Twoje sesje treningowe</h3>

<button class="btn btn-primary mb-3" @onclick="StartCreate">Dodaj sesję</button>

<table class="table">
    <thead>
        <tr>
            <th>Start</th>
            <th>Koniec</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in sessions)
        {
            <tr>
                <td>@s.StartTime</td>
                <td>@s.EndTime</td>
                <td>
                    <button class="btn btn-warning btn-sm" @onclick="() => StartEdit(s)">Edytuj</button>
                    <button class="btn btn-danger btn-sm" @onclick="() => DeleteAsync(s.Id)">Usuń</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (isEditing)
{
    <EditForm Model="editing" OnValidSubmit="SaveAsync">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label>Czas rozpoczęcia</label>
            <InputDate class="form-control" @bind-Value="editing.StartTime" />
        </div>

        <div class="mb-3">
            <label>Czas zakończenia</label>
            <InputDate class="form-control" @bind-Value="editing.EndTime" />
        </div>

        <button class="btn btn-success">Zapisz</button>
        <button type="button" class="btn btn-secondary ms-2" @onclick="CancelEdit">Anuluj</button>
    </EditForm>
}

@code {
    private List<TrainingSession> sessions = new();
    private TrainingSession editing = new();
    private bool isEditing = false;
    private string? currentUserId;

    protected override async Task OnInitializedAsync()
    {
        currentUserId = await GetUserId();
        if (string.IsNullOrEmpty(currentUserId))
            return;

        sessions = await Db.TrainingSessions
            .Where(s => s.UserId == currentUserId)
            .OrderByDescending(s => s.StartTime)
            .ToListAsync();
    }

    private async Task<string?> GetUserId()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        return UserManager.GetUserId(user);
    }

    private void StartCreate()
    {
        editing = new TrainingSession
        {
            UserId = currentUserId!,      // ustawiamy od razu, żeby walidacja nie krzyczała
            StartTime = DateTime.Today,
            EndTime = DateTime.Today
        };
        isEditing = true;
    }

    private void StartEdit(TrainingSession s)
    {
        editing = new TrainingSession
        {
            Id = s.Id,
            UserId = currentUserId!,      // też ustawiamy
            StartTime = s.StartTime,
            EndTime = s.EndTime
        };
        isEditing = true;
    }

    private void CancelEdit()
    {
        editing = new TrainingSession();
        isEditing = false;
    }

    private async Task SaveAsync()
    {
        if (string.IsNullOrEmpty(currentUserId))
            return;

        if (editing.Id == 0)
        {
            editing.UserId = currentUserId!;
            Db.TrainingSessions.Add(editing);
        }
        else
        {
            var session = await Db.TrainingSessions
                .FirstOrDefaultAsync(s => s.Id == editing.Id && s.UserId == currentUserId);

            if (session is null)
                return;

            session.StartTime = editing.StartTime;
            session.EndTime = editing.EndTime;
        }

        await Db.SaveChangesAsync();

        sessions = await Db.TrainingSessions
            .Where(s => s.UserId == currentUserId)
            .OrderByDescending(s => s.StartTime)
            .ToListAsync();

        isEditing = false;
        editing = new TrainingSession();
    }

    private async Task DeleteAsync(int id)
    {
        if (string.IsNullOrEmpty(currentUserId))
            return;

        var s = await Db.TrainingSessions
            .FirstOrDefaultAsync(x => x.Id == id && x.UserId == currentUserId);

        if (s == null)
            return;

        Db.TrainingSessions.Remove(s);
        await Db.SaveChangesAsync();

        sessions = await Db.TrainingSessions
            .Where(x => x.UserId == currentUserId)
            .OrderByDescending(x => x.StartTime)
            .ToListAsync();
    }
}
